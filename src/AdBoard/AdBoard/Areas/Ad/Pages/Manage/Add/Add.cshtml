@page
@model AdBoard.Areas.Ad.Pages.Manage.Add.AddModel
@{
    ViewData["Title"] = "Add";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Name"></label>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Description"></label>
                    <textarea asp-for="Input.Description" class="form-control"></textarea>
                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.YoutubeUrl"></label>
                    <input asp-for="Input.YoutubeUrl" class="form-control" />
                    <span asp-validation-for="Input.YoutubeUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Keywords">
                            @Html.DisplayNameFor(m => m.Input.Keywords)
                    </label>
                    <input asp-for="Input.Keywords" class="form-control" />
                    <span asp-validation-for="Input.Keywords" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

