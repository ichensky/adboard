@page
@model AdBoard.Areas.Identity.Pages.Account.Manage.AddAdModel
@{
    ViewData["Title"] = "Add ad";
    ViewData["ActivePage"] = ManageNavPages.AddAd;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="ad-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ShortDescription"></label>
                <input asp-for="Input.ShortDescription" class="form-control" />
                <span asp-validation-for="Input.ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Description"></label>
                <input asp-for="Input.Description" class="form-control" />
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Keywords"></label>
                <input asp-for="Input.Keywords" class="form-control" />
                <span asp-validation-for="Input.Keywords" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.YoutubeUrl"></label>
                <input asp-for="Input.YoutubeUrl" class="form-control" />
                <span asp-validation-for="Input.YoutubeUrl" class="text-danger"></span>
            </div>
            <button id="update-ad-button" type="submit" class="btn btn-primary">Ad</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
